<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="false"
    tools:context=".register">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:backgroundTint="#0D3E0F"
        android:onClick="addNewUser"
        android:paddingLeft="50dp"
        android:paddingTop="11dp"
        android:paddingRight="50dp"
        android:paddingBottom="11dp"
        android:text="register"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="goLoginPage"
        android:text="login"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

    <TextView
        android:id="@+id/editTextTextPersonName13"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName11"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/re_password"
        android:text="Re-enter password"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/password"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/editTextTextPersonName11"
        android:layout_toRightOf="@id/editTextTextPersonName2"
        android:ems="10"
        android:inputType="textPersonName|textPassword"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/editTextTextPersonName11"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName9"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/password"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/re_password"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/editTextTextPersonName13"
        android:layout_toRightOf="@id/editTextTextPersonName2"
        android:ems="10"
        android:inputType="textPersonName|textPassword"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/editTextTextPersonName9"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName7"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/usernameTxt"
        android:text="Username:"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/username"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/editTextTextPersonName9"
        android:layout_toRightOf="@id/editTextTextPersonName2"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword3"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/email"
        android:text="E-mail:"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/email"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/editTextTextPersonName7"
        android:layout_toRightOf="@id/editTextTextPersonName2"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/name"
        android:text="Name:"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/surname"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/editTextTextPassword3"
        android:layout_toRightOf="@id/editTextTextPersonName2"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/name"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@id/editTextTextPersonName2"
        android:layout_toRightOf="@id/editTextTextPersonName2"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/editTextTextPassword3"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPersonName2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:labelFor="@id/surname"
        android:text="Surname:"
        android:textColor="@color/black"
        android:textSize="20sp"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Register"
        android:textColor="#0D3E0F"
        android:textSize="34sp"
        android:textStyle="bold" />
</RelativeLayout>